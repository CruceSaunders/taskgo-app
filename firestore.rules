rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // User profiles - only the authenticated user can read/write their own
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Personal task groups
      match /groups/{groupId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Personal tasks
      match /tasks/{taskId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Daily notes
      match /notes/{noteId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Invites - user can read their own invites, anyone authenticated can create
      match /invites/{inviteId} {
        allow read, update: if request.auth != null && request.auth.uid == userId;
        allow create: if request.auth != null;
      }
    }

    // Username uniqueness lookup
    match /usernames/{username} {
      allow read: if true; // Anyone can check availability
      allow create: if request.auth != null
        && request.resource.data.userId == request.auth.uid;
      allow delete: if false; // Only Cloud Functions can delete
    }

    // Social groups
    match /socialGroups/{groupId} {
      // Anyone authenticated can read group info (for invites)
      allow read: if request.auth != null;
      // Only the host can create/update/delete
      allow create: if request.auth != null
        && request.resource.data.hostUserId == request.auth.uid;
      allow update, delete: if request.auth != null
        && resource.data.hostUserId == request.auth.uid;

      // Members subcollection
      match /members/{memberId} {
        // Any authenticated user can read members (for leaderboards)
        allow read: if request.auth != null;
        // Host can add/remove members, or user can add themselves (accepting invite)
        allow create: if request.auth != null
          && (request.auth.uid == memberId
              || get(/databases/$(database)/documents/socialGroups/$(groupId)).data.hostUserId == request.auth.uid);
        allow update: if request.auth != null
          && (request.auth.uid == memberId); // Members update their own XP
        allow delete: if request.auth != null
          && (request.auth.uid == memberId
              || get(/databases/$(database)/documents/socialGroups/$(groupId)).data.hostUserId == request.auth.uid);
      }
    }
  }
}
